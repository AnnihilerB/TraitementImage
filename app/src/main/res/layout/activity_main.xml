<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.soft.ali.traitementimage.MainActivity">

    <com.soft.ali.traitementimage.ImgView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grayscale"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonColorize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colorize"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonEqualization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equalization"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonExtension"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extand Dynamism"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonConvolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonOverexposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overexposure"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/buttonFusion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fusion"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000">
    </FrameLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/actionsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:fab_addButtonColorNormal="@color/colorPrimaryDark"
        app:fab_addButtonColorPressed="#6497b1"
        app:fab_icon="@android:drawable/ic_menu_add"
        app:fab_size="mini"
        app:fab_expandDirection="up"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGallerie"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_menu_gallery"
            app:fab_title="Gallerie"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCamera"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_icon="@android:drawable/ic_menu_camera"
            app:fab_title="Appareil photo"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="RESET"/>


</RelativeLayout>
